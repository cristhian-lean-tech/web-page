---
interface Props {
  name: string;
  text: string;
  image: string;
}

const { name, text, image } = Astro.props;
---

<div class="flex items-start gap-4 p-4 border border-slate-700/50 bg-slate-800/30 backdrop-blur-sm rounded-[8px] min-w-[320px] max-w-[320px] shadow-lg hover:border-slate-600/50 transition-colors">
  <div class="shrink-0">
    <img src={image} alt={name} class="w-12 h-12 rounded-[50%] object-cover border-2 border-slate-600/50" />
  </div>
  <div class="flex flex-col">
    <span class="font-bold text-white text-base leading-tight">{name}</span>
    <p class="mt-1 text-slate-300 text-sm leading-relaxed text-left">
      "{text}"
    </p>
  </div>
</div>
